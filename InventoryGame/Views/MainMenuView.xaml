<mah:MetroWindow x:Class="InventoryGame.Views.MainMenuView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventoryGame.Views"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        mc:Ignorable="d"
        Title="Главное меню" Height="260" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource background}">
    <Grid>
        <StackPanel>
            <Button x:Name="NewGame"
                    Content="Новая игра"
                    Style="{DynamicResource MainMenuButton}"
                    Background="{StaticResource button1}"
                    IsDefault="True"
                    Margin="5"/>
            <Button x:Name="Exit"
                    Content="Выход"
                    Style="{DynamicResource MainMenuButton}"
                    Background="{StaticResource button1}"
                    IsCancel="True"
                    Margin="5"/>
        </StackPanel>
    </Grid>
</mah:MetroWindow>
